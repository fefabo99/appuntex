\section*{Cinematica}
\begin{tabularx}{\textwidth}{|l|Yc|}
    \hline
    \multicolumn{3}{|c|}{\uppercase{Moto Uniformemente Accelerato}}\\
    \hline
    \textbf{Spostamento} & $x(t) = x_i + v_it + \frac{1}{2} at^2 $ & $[m]$\\
    \hline
    \textbf{Velocità} & $v(t) = v_i + at$ & \\
    \hline
    \hline
    Velocità Media & $v_m = \frac{\Delta x}{\Delta y} = \frac{x_f-x_i}{t_f-t_i}$ & $[m/s]$\\
    \hline
    Velocità Istantanea & $\vettore{v} = \lim_{x\to0} \frac{\Delta x}{\Delta t} = \frac{dx}{dt}$ &\\
    \hline
    Accelerazione Istantanea & $a = \frac{\Delta v }{\Delta t} = \frac{d^2x}{dt^2}$&\\
    \hline
    \hline
    \multicolumn{3}{|c|}{\uppercase{Moto Circolare Uniforme}}\\
    \hline
    Velocità Tangenziale & $v = \frac{2\pi r}{T}$ & $[m/s]$\\
    \hline
    Velocità Angolare &$ \omega = \frac{2\pi}{T}$ & $[rad/s]$ \\
    \hline
    Accelerazione Centripeta & $a_c = \frac{v^2}{r}$ & $[m/s^2]$\\
    \hline
    Periodo & $T=\frac{2\pi r }{v}$ & \\
    \hline
    
\end{tabularx}
\begin{tabularx}{\textwidth}{|l|Yc|}
