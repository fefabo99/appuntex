    \multicolumn{3}{|c|}{\uppercase{Moto circolare Uniformemente Accelerato}}\\
    \hline
    Legge Oraria &     $\begin{cases} \theta = \theta _0 + \omega _0 t + \frac{1}{2} \alpha t^2 \\ \omega = \omega _0 + \alpha t \end{cases}$ & \\
    \hline
    Acelerazione Tangenziale & $ a_t = \alpha r$ & \\
    \hline
\end{tabularx}
